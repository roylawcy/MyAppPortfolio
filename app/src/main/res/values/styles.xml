<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_700</item>
        <item name="colorPrimaryDark">@color/material_blue_800</item>
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Base app button style -->
    <style name="AppButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/basic_button_selector</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
